      function taxCalculator() {
        return {
          activeTab: 1,

          formData: {
            name: "",
            email: "",
            age: "",
            incomeSalary: "",
            incomeInterest: "",
            incomeRental: "",
            incomeDigital: "",
            exemptAllowances: "",
            interestHomeLoanSelf: "",
            interestHomeLoanLetOut: "",
            otherIncome: "",

            deduction80C: "",
            deduction80D: "",
            deduction80EEA: "",
            deduction80CCD2: "",
            deduction80TTA: "",
            deduction80G: "",
            deduction80CCD: "",
            deductionOthers: "",
          },
          resultData: {
            taxLiability: 0,
            effectiveTaxRate: 0,
          },

          async calculateTax() {
            try {
              const payload = { ...this.formData };

              const response = await fetch("/calculateTax", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify(payload),
              });

              if (!response.ok) {
                throw new Error("Network response was not ok");
              }

              const data = await response.json();

              this.resultData.taxLiability = data.data.taxLiability;
              this.resultData.effectiveTaxRate = data.data.effectiveTaxRate;

              this.$refs.resultsContainer.classList.remove("hidden");
              this.$refs.resultsContainer.classList.add(
                "animate__animated",
                "animate__fadeIn"
              );
            } catch (error) {
              console.error("Error calculating tax:", error);
              alert(
                "Something went wrong while calculating tax. Please try again."
              );
            }
          },
        };
      }
